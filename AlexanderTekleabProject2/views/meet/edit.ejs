<%- include('../partials/header.ejs')%>

<div class="create">

    <div class="title">Create a Cars and Coffee Meet</div>

    
        <form method="POST" action="/connections/<%= meet.id%>?_method=PUT">

            <label><span>Topic: <span class="required">*</span></span><input
            type="text" class="input-field" name="topic" value="<%= meet.topic%>" /></label>
                        
            <label><span>Host: <span class="required">*</span></span><input type="text" class="input-field" name="host" value="<%= meet.host%>"/></label>
            
            <label><span>Where: <span class="required">*</span></span><input type="text" class="input-field" name="where" value="<%= meet.where%>"/></label>
                        
            <label><span>When: <span class="required">*</span></span><input type="date" class="input-field" name="when" value="<%= meet.when%>"/></label>
            
            <label><span>Start: <span class="required">*</span></span><input type="time" class="input-field" name="start" value="<%= meet.start%>"/></label>
            
            <label><span>End: <span class="required">*</span></span><input type="time" class="input-field" name="end" value="<%= meet.end%>"/></label>
            
            <label><span>Details: <span class="required">*</span></span><textarea name="details" class="textarea-field"><%= meet.details %></textarea></label>

            
            <label><span>Image URL: <span class="required">*</span></span><input type="text" class="input-field" name="image" value="<%= meet.image%>"/></label>
            
            
            <input type="submit" value="Submit"/>
                
        </form>

</div>
    <%- include('../partials/footer.ejs')%>
